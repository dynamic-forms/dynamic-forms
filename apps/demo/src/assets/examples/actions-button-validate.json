{
  "template": {
    "label": "Login"
  },
  "footerActions": [ 
    {
      "id": "action-validate",
      "type": "button",
      "template": {
        "type": "button",
        "label": "Validate",
        "action": "validate"
      }
    }
  ],
  "elements": [
    {
      "key": "email",
      "type": "control",
      "template": {
        "label": "Email",
        "input": {
          "type": "textbox",
          "inputType": "email",
          "placeholder": "Enter your email"
        },
        "validation": {
          "required": true,
          "email": true
        }
      }
    },
    {
      "key": "password",
      "type": "control",
      "template": {
        "label": "Password",
        "input": {
          "type": "textbox",
          "inputType": "password",
          "placeholder": "Enter your password",
          "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
        },
        "validation": {
          "required": true,
          "pattern": true
        }
      }
    },
    {
      "key": "remember",
      "type": "control",
      "template": {
        "label": "Remember login",
        "input": {
          "type": "checkbox"
        }
      }
    }
  ]
}