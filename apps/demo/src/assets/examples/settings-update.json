{
  "template": {
    "label": "Update strategy"
  },
  "children":[
    {
      "key": "name",
      "type": "control",
      "template": {
        "label": "Name",
        "input": {
          "type": "textbox",
          "placeholder": "Enter your name",
          "maxLength": 20
        },
        "hints": {
          "hintStart": "Update on change"
        },
        "validation": {
          "required": true,
          "maxLength": true
        }
      },
      "expressions": {
        "hints.hintEnd": "'Max ' + (data.model || '').length + '/20'"
      },
      "settings": {
        "updateType": "change"
      }
    },
    {
      "key": "email",
      "type": "control",
      "template": {
        "label": "Email",
        "input": {
          "type": "textbox",
          "inputType": "email",
          "placeholder": "Enter your email"
        },
        "hints": {
          "hintStart": "Update on debounce (300ms)"
        },
        "validation": {
          "required": true,
          "email": true
        }
      },
      "expressions": {
        "hints.hintEnd": "'Length ' + (data.model || '').length"
      },
      "settings": {
        "updateType": "debounce"
      }
    },
    {
      "key": "password",
      "type": "control",
      "template": {
        "label": "Password",
        "input": {
          "type": "textbox",
          "inputType": "password",
          "placeholder": "Enter your password",
          "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
        },
        "hints": {
          "hintStart": "Update on debounce (500ms)"
        },
        "validation": {
          "required": true,
          "pattern": true
        }
      },
      "expressions": {
        "hints.hintEnd": "(function() { var length = (data.model || '').length; return 'Min ' + length + '/6, Max ' + length + '/20'; })()"
      },
      "settings": {
        "updateType": "debounce",
        "updateDebounce": 500
      }
    },
    {
      "key": "passwordConfirm",
      "type": "control",
      "template": {
        "label": "Password Confirm",
        "input": {
          "type": "textbox",
          "inputType": "password",
          "placeholder": "Confirm your password",
          "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
        },
        "hints": {
          "hintStart": "Update on blur"
        },
        "validation": {
          "required": true,
          "pattern": true
        }
      },
      "expressions": {
        "hints.hintEnd": "(function() { var length = (data.model || '').length; return 'Min ' + length + '/6, Max ' + length + '/20'; })()"
      },
      "settings": {
        "updateType": "blur"
      }
    },
    {
      "key": "comment",
      "type": "control",
      "template": {
        "label": "Comment",
        "input": {
          "type": "textarea",
          "placeholder": "Enter a comment"
        },
        "hints": {
          "hintStart": "Update on submit"
        }
      },
      "expressions": {
        "hints.hintEnd": "'Length ' + (data.model || '').length"
      },
      "settings": {
        "updateType": "submit"
      }
    }
  ],
  "footerActions": [ 
    {
      "id": "action-submit",
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      }
    },
    {
      "id": "action-validate",
      "type": "button",
      "template": {
        "type": "button",
        "label": "Validate",
        "action": "validate"
      }
    },
    {
      "id": "action-reset",
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    }
  ]
}