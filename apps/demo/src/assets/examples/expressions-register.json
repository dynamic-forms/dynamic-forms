{
  "children":[
    {
      "id": "input-disabled",
      "key": "disabled",
      "type": "control",
      "template": {
        "label": "Disabled",
        "input": {
          "type": "checkbox",
          "defaultValue": true
        }
      }
    },
    {
      "id": "input-readonly",
      "key": "readonly",
      "type": "control",
      "template": {
        "label": "Readonly",
        "input": {
          "type": "checkbox"
        }
      }
    },
    {
      "key": "register",
      "type": "group",
      "template": {
        "label": "Register"
      },
      "expressions": {
        "disabled": "data.root.model.disabled",
        "readonly": "data.root.model.readonly"
      },
      "children":[
        {
          "key": "name",
          "type": "control",
          "template": {
            "label": "Name",
            "input": {
              "type": "textbox",
              "placeholder": "Enter your name"
            },
            "validation": {
              "required": true
            }
          }
        },
        {
          "key": "email",
          "type": "control",
          "template": {
            "label": "Email",
            "input": {
              "type": "textbox",
              "inputType": "email",
              "placeholder": "Enter your email"
            },
            "validation": {
              "required": true,
              "email": true
            }
          }
        },
        {
          "key": "password",
          "type": "control",
          "template": {
            "label": "Password",
            "input": {
              "type": "textbox",
              "inputType": "password",
              "placeholder": "Enter your password"
            },
            "validation": {
              "required": true
            }
          }
        },
        {
          "key": "addressEnabled",
          "type": "control",
          "template": {
            "label": "Address",
            "input": {
              "type": "checkbox"
            }
          }
        },
        {
          "key": "address",
          "type": "group",
          "expressions": {
            "hidden": "!data.parent.model.addressEnabled"
          },
          "children":[
            {
              "key": "town",
              "type": "control",
              "template": {
                "label": "Town",
                "input": {
                  "type": "textbox",
                  "placeholder": "Enter your town",
                  "minLength": 5,
                  "maxLength": 10
                },
                "validation": {
                  "required": true,
                  "minLength": true,
                  "maxLength": true
                }
              },
              "expressions": {
                "validation.required": "data.root.model.register.addressEnabled"
              }
            },
            {
              "key": "street",
              "type": "control",
              "template": {
                "label": "Street",
                "input": {
                  "type": "textbox",
                  "placeholder": "Enter your street",
                  "minLength": 5,
                  "maxLength": 10
                },
                "validation": {
                  "required": true,
                  "minLength": true,
                  "maxLength": true
                }
              },
              "expressions": {
                "validation.required": "data.root.model.register.addressEnabled"
              }
            }
          ]
        }
      ]
    }
  ],
  "footerActions": [ 
    {
      "id": "action-submit",
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      }
    },
    {
      "id": "action-validate",
      "type": "button",
      "template": {
        "type": "button",
        "label": "Validate",
        "action": "validate"
      }
    },
    {
      "id": "action-reset",
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    }
  ]
}