{
  "template": {
    "label": "Inputs with default value"
  },
  "children":[
    {
      "key": "checkbox",
      "type": "control",
      "template": {
        "label": "Checkbox",
        "input": {
          "type": "checkbox",
          "defaultValue": true
        }  
      }
    },
    {
      "key": "combobox",
      "type": "control",
      "template": {
        "label": "Combobox",
        "input": {
          "type": "combobox",
          "placeholder": "Enter a text",
          "defaultValue": "Value1",
          "options": [
            "Value1",
            "Value2",
            "Value3"
          ]
        }
      }
    },
    {
      "key": "datepicker",
      "type": "control",
      "template": {
        "label": "Datepicker",
        "input": {
          "type": "datepicker",
          "placeholder": "Enter a date",
          "defaultValue": "2019-01-01"
        }
      }
    },
    {
      "key": "numberbox",
      "type": "control",
      "template": {
        "label": "Numberbox",
        "input": {
          "type": "numberbox",
          "placeholder": "Enter a number",
          "defaultValue": 0.01
        }        
      }
    },
    {
      "key": "radio",
      "type": "control",
      "template": {
        "label": "Radio",
        "input": {
          "type": "radio",
          "defaultValue": 2,
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            },
            {
              "value": 3,
              "label": "Option 3",
              "disabled": true
            }
          ]
        }
      }
    },
    {
      "key": "select",
      "type": "control",
      "template": {
        "label": "Select",
        "input": {
          "type": "select",
          "defaultValue": 1,
          "placeholder": "Select an option",
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            },
            {
              "value": 3,
              "label": "Option 3",
              "disabled": true
            }
          ]
        }
      }
    },
    {
      "key": "switch",
      "type": "control",
      "template": {
        "label": "Switch",
        "input": {
          "type": "switch",
          "defaultValue": true
        }
      }
    },
    {
      "key": "textarea",
      "type": "control",
      "template": {
        "label": "Textarea",
        "input": {
          "type": "textarea",
          "placeholder": "Enter a text",
          "defaultValue": "Text line 1\nText line 2"
        }
      }
    },
    {
      "key": "textbox",
      "type": "control",
      "template": {
        "label": "Textbox",
        "input": {
          "type": "textbox",
          "placeholder": "Enter a text",
          "defaultValue": "Text 1, Text 2"
        }
      }
    },
    {
      "key": "toggle",
      "type": "control",
      "template": {
        "label": "Toggle",
        "input": {
          "type": "toggle",
          "defaultValue": 1,
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            },
            {
              "value": 3,
              "label": "Option 3",
              "disabled": true
            }
          ]
        }
      }
    }
  ],
  "footerActions": [ 
    {
      "id": "action-submit",
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      }
    },
    {
      "id": "action-reset",
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    },
    {
      "id": "action-reset-default",
      "type": "button",
      "template": {
        "type": "button",
        "label": "Reset default",
        "action": "resetDefault"
      }
    }
  ]
}