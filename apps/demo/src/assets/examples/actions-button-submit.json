{
  "actions": [
    {
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "rootStatus !== 'VALID'"
      }
    }
  ],
  "elements": [
    {
      "key": "login",
      "type": "group",
      "template": {
        "label": "Login"
      },
      "elements": [
        {
          "key": "email",
          "type": "control",
          "template": {
            "label": "Email",
            "input": {
              "type": "textbox",
              "inputType": "email",
              "placeholder": "Enter your email"
            },
            "validation": {
              "required": true,
              "email": true
            }
          }
        },
        {
          "key": "password",
          "type": "control",
          "template": {
            "label": "Password",
            "input": {
              "type": "textbox",
              "inputType": "password",
              "placeholder": "Enter your password",
              "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
            },
            "validation": {
              "required": true,
              "pattern": true
            }
          }
        },
        {
          "key": "remember",
          "type": "control",
          "template": {
            "label": "Remember login",
            "input": {
              "type": "checkbox"
            }
          }
        }
      ]
    }
  ]
}