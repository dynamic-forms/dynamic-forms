{
  "template": {
    "label": "Delete Account",
    "validation": {
      "equalPassword": true
    }
  },
  "headerActions": [ 
    {
      "id": "action-submit",
      "type": "icon",
      "template": {
        "type": "button",
        "label": "Delete",
        "icon": "remove",
        "title": "Delete account"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      },
      "dialogDefinition": {
        "children":[
          {
            "type": "content",
            "template": {
              "content": "<p>You are going to delete your account. Please confirm.</p>"
            }
          },
          {
            "key": "confirm",
            "type": "control",
            "template": {
              "label": "Yes, I want to delete my account.",
              "input": {
                "type": "checkbox"
              }
            }
          }
        ],
        "footerActions": [ 
          {
            "type": "button",
            "template": {
              "type": "button",
              "label": "Cancel",
              "action": "closeDialog"
            }  
          },
          {
            "type": "button",
            "template": {
              "type": "button",
              "label": "Delete",
              "action": "submit"
            },
            "expressions": {
              "disabled": "!data.parent.dialog.model.confirm"
            }  
          }
        ]
      }
    }
  ],
  "children":[
    {
      "key": "email",
      "type": "control",
      "template": {
        "label": "Email",
        "input": {
          "type": "textbox",
          "inputType": "email",
          "placeholder": "Enter your email"
        },
        "validation": {
          "required": true,
          "email": true
        }
      }
    },
    {
      "key": "password",
      "type": "control",
      "template": {
        "label": "Password",
        "input": {
          "type": "textbox",
          "inputType": "password",
          "placeholder": "Enter your password",
          "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
        },
        "validation": {
          "required": true,
          "pattern": true
        }
      }
    },
    {
      "key": "confirmPassword",
      "type": "control",
      "template": {
        "label": "Confirm Password",
        "input": {
          "type": "textbox",
          "inputType": "password",
          "placeholder": "Enter your password",
          "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
        },
        "validation": {
          "required": true,
          "pattern": true
        }
      }
    }
  ],
  "validators": {
    "equalPassword": {
      "type": "equal",
      "parameters": {
        "keys": [ "password", "confirmPassword" ]
      },
      "message": "The password does not fit the confirm password"
    }
  }
}