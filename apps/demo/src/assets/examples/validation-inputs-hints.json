{
  "elements": [
    {
      "type": "content",
      "template": {
        "content": "<h3>Validation of inputs</h3>"
      }
    },
    {
      "key": "checkbox",
      "type": "control",
      "template": {
        "label": "Checkbox",
        "input": {
          "type": "checkbox"
        },
        "validation": {
          "required": true
        }
      }
    },
    {
      "key": "combobox",
      "type": "control",
      "template": {
        "label": "Combobox",
        "input": {
          "type": "combobox",
          "placeholder": "Enter a text",
          "options": [
            "Value1",
            "Value2",
            "Value3"
          ],
          "minLength": 5,
          "maxLength": 6,
          "pattern": "^Value[0-9]$"
        },
        "validation": {
          "required": true,
          "minLength": true,
          "maxLength": true,
          "pattern": true
        },
        "hints": {
          "hintStart": "Pattern: Value[0-9]"
        }
      }
    },
    {
      "key": "datepicker",
      "type": "control",
      "template": {
        "label": "Datepicker",
        "input": {
          "type": "datepicker",
          "placeholder": "Enter a date"
        },
        "validation": {
          "required": true
        },
        "hints": {
          "hintEnd": "Click to open calendar"
        }
      }
    },
    {
      "key": "numberbox",
      "type": "control",
      "template": {
        "label": "Numberbox",
        "input": {
          "type": "numberbox",
          "placeholder": "Enter a number",
          "min": -5,
          "max": 5
        },
        "validation": {
          "required": true,
          "min": true,
          "max": true
        },
        "hints": {
          "hintStart": "Min: -5",
          "hintEnd": "Max: 5"
        }
      }
    },
    {
      "key": "radio",
      "type": "control",
      "template": {
        "label": "Radio",
        "input": {
          "type": "radio",
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            }
          ]
        },
        "validation": {
          "required": true
        }
      }
    },
    {
      "key": "select",
      "type": "control",
      "template": {
        "label": "Select",
        "input": {
          "type": "select",
          "placeholder": "Select an option",
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            }
          ]
        },
        "validation": {
          "required": true
        },
        "hints": {
          "hintEnd": "Click to open selection"
        }
      }
    },
    {
      "key": "textarea",
      "type": "control",
      "template": {
        "label": "Textarea",
        "input": {
          "type": "textarea",
          "placeholder": "Enter a text"
        },
        "validation": {
          "required": true
        },
        "hints": {
          "hintStart": "Press 'Enter' for line break"
        }
      }
    },
    {
      "key": "textbox",
      "type": "control",
      "template": {
        "label": "Textbox",
        "input": {
          "type": "textbox",
          "placeholder": "Enter a text",
          "minLength": 5,
          "maxLength": 20
        },
        "validation": {
          "required": true,
          "minLength": true,
          "maxLength": true
        }
      },
      "expressions": {
        "hints.hintStart": "\"Min \" + (model || \"\").length + \"\/5\"",
        "hints.hintEnd": "\"Max \" + (model || \"\").length + \"\/20\""
      }
    },
    {
      "key": "email",
      "type": "control",
      "template": {
        "label": "Email",
        "input": {
          "type": "textbox",
          "inputType": "email",
          "placeholder": "Enter an email"
        },
        "validation": {
          "required": true,
          "email": true
        },
        "hints": {
          "hintStart": "E.g. user@gmail.com"
        }
      }
    },
    {
      "key": "password",
      "type": "control",
      "template": {
        "label": "Password",
        "input": {
          "type": "textbox",
          "inputType": "password",
          "placeholder": "Enter a password",
          "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
        },
        "validation": {
          "required": true,
          "pattern": true
        }
      },
      "expressions": {
        "hints.hintStart": "\"Min \" + (model || \"\").length + \"\/6\"",
        "hints.hintEnd": "\"Max \" + (model || \"\").length + \"\/20\""
      }
    }
  ],
  "actions": [
    {
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "rootStatus !== 'VALID'"
      }
    },
    {
      "type": "button",
      "template": {
        "type": "button",
        "label": "Validate",
        "action": "validate"
      }
    },
    {
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    }
  ]
}