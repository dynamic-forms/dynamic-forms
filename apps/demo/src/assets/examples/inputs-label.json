{
  "elements": [
    {
      "type": "content",
      "template": {
        "content": "<h3>Inputs with label</h3>"
      }
    },
    {
      "key": "checkbox",
      "type": "control",
      "template": {
        "label": "Checkbox",
        "input": {
          "type": "checkbox"
        }
      }
    },
    {
      "key": "combobox",
      "type": "control",
      "template": {
        "label": "Combobox",
        "input": {
          "type": "combobox",
          "options": [
            "Value1",
            "Value2",
            "Value3"
          ]
        }
      }
    },
    {
      "key": "datepicker",
      "type": "control",
      "template": {
        "label": "Datepicker",
        "input": {
          "type": "datepicker"
        }
      }
    },
    {
      "key": "numberbox",
      "type": "control",
      "template": {
        "label": "Numberbox",
        "input": {
          "type": "numberbox"
        }
      }
    },
    {
      "key": "radio",
      "type": "control",
      "template": {
        "label": "Radio",
        "input": {
          "type": "radio",
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            },
            {
              "value": 3,
              "label": "Option 3",
              "disabled": true
            }
          ]
        }
      }
    },
    {
      "key": "select",
      "type": "control",
      "template": {
        "label": "Select",
        "input": {
          "type": "select",
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            },
            {
              "value": 3,
              "label": "Option 3",
              "disabled": true
            }
          ]
        }
      }
    },
    {
      "key": "switch",
      "type": "control",
      "template": {
        "label": "Switch",
        "input": {
          "type": "switch"
        }
      }
    },
    {
      "key": "textarea",
      "type": "control",
      "template": {
        "label": "Textarea",
        "input": {
          "type": "textarea"
        }
      }
    },
    {
      "key": "textbox",
      "type": "control",
      "template": {
        "label": "Textbox",
        "input": {
          "type": "textbox"
        }
      }
    },
    {
      "key": "toggle",
      "type": "control",
      "template": {
        "label": "Toggle",
        "input": {
          "type": "toggle",
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            },
            {
              "value": 3,
              "label": "Option 3",
              "disabled": true
            }
          ]
        }
      }
    }
  ],
  "footerActions": [ 
    {
      "id": "action-submit",
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      }
    },
    {
      "id": "action-reset",
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    }
  ]
}