{
  "elements": [
    {
      "type": "content",
      "template": {
        "content": "<h3>Inputs with hints</h3>"
      }
    },
    {
      "key": "combobox",
      "type": "control",
      "template": {
        "label": "Combobox",
        "input": {
          "type": "combobox",
          "placeholder": "Enter a text",
          "options": [
            "Value1",
            "Value2",
            "Value3"
          ],
          "minLength": 5,
          "maxLength": 6,
          "pattern": "^Value[0-9]$"
        },
        "hints": {
          "hintStart": "Enter: Value[0-9]"
        }
      }
    },
    {
      "key": "datepicker",
      "type": "control",
      "template": {
        "label": "Datepicker",
        "input": {
          "type": "datepicker",
          "placeholder": "Enter a date"
        },
        "hints": {
          "hintEnd": "Click to open calendar"
        }
      }
    },
    {
      "key": "numberbox",
      "type": "control",
      "template": {
        "label": "Numberbox",
        "input": {
          "type": "numberbox",
          "placeholder": "Enter a number",
          "min": -5,
          "max": 5
        },
        "hints": {
          "hintStart": "Min: -5",
          "hintEnd": "Max: 5"
        }
      }
    },
    {
      "key": "select",
      "type": "control",
      "template": {
        "label": "Select",
        "input": {
          "type": "select",
          "placeholder": "Select an option",
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            }
          ]
        },
        "hints": {
          "hintEnd": "Click to open selection"
        }
      }
    },
    {
      "key": "textarea",
      "type": "control",
      "template": {
        "label": "Textarea",
        "input": {
          "type": "textarea",
          "placeholder": "Enter a text"
        },
        "hints": {
          "hintStart": "Press 'Enter' for line break"
        }
      }
    },
    {
      "key": "textbox",
      "type": "control",
      "template": {
        "label": "Textbox",
        "input": {
          "type": "textbox",
          "placeholder": "Enter a text",
          "minLength": 5,
          "maxLength": 20
        }
      },
      "expressions": {
        "hints.hintStart": "\"Min \" + (model || \"\").length + \"\/5\"",
        "hints.hintEnd": "\"Max \" + (model || \"\").length + \"\/20\""
      }
    }
  ]
}