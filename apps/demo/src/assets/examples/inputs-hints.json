{
  "fields": [
    {
      "key": "checkbox",
      "type": "control",
      "template": {
        "label": "Checkbox",
        "input": {
          "type": "checkbox"
        },
        "validation": {
          "required": true
        }
      }
    },
    {
      "key": "combobox",
      "type": "control",
      "template": {
        "label": "Combobox",
        "input": {
          "type": "combobox",
          "options": [
            "Value1",
            "Value2",
            "Value3"
          ],
          "minLength": 5,
          "maxLength": 6,
          "pattern": "^Value[0-9]$"
        },
        "validation": {
          "required": true,
          "minLength": true,
          "maxLength": true,
          "pattern": true
        },
        "hints": {
          "hintStart": "Pattern: Value[0-9]"
        }
      }
    },
    {
      "key": "datepicker",
      "type": "control",
      "template": {
        "label": "Datepicker",
        "input": {
          "type": "datepicker"
        },
        "validation": {
          "required": true
        },
        "hints": {
          "hintEnd": "Click to open calendar"
        }
      }
    },
    {
      "key": "dropdown",
      "type": "control",
      "template": {
        "label": "Dropdown",
        "input": {
          "type": "dropdown",
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            }
          ]
        },
        "validation": {
          "required": true
        },
        "hints": {
          "hintEnd": "Click to open selection"
        }
      }
    },
    {
      "key": "numberbox",
      "type": "control",
      "template": {
        "label": "Numberbox",
        "input": {
          "type": "numberbox",
          "min": -5,
          "max": 5
        },
        "validation": {
          "required": true,
          "min": true,
          "max": true
        },
        "hints": {
          "hintStart": "Min: -5",
          "hintEnd": "Max: 5"
        }
      }
    },
    {
      "key": "radio",
      "type": "control",
      "template": {
        "label": "Radio",
        "input": {
          "type": "radio",
          "options": [
            {
              "value": 1,
              "label": "Option 1"
            },
            {
              "value": 2,
              "label": "Option 2"
            }
          ]
        },
        "validation": {
          "required": true
        }
      }
    },
    {
      "key": "textarea",
      "type": "control",
      "template": {
        "label": "Textarea",
        "input": {
          "type": "textarea"
        },
        "validation": {
          "required": true
        },
        "hints": {
          "hintEnd": "Press 'Enter' for line break"
        }
      }
    },
    {
      "key": "textbox",
      "type": "control",
      "template": {
        "label": "Textbox",
        "input": {
          "type": "textbox",
          "minLength": 5,
          "maxLength": 10
        },
        "validation": {
          "required": true,
          "minLength": true,
          "maxLength": true
        },
        "hints": {
          "hintStart": "Min 5 characters"
        }
      },
      "expressions": {
        "hints.hintEnd": "(model || \"\").length + \"\/10\""
      }
    },
    {
      "key": "email",
      "type": "control",
      "template": {
        "label": "Email",
        "input": {
          "type": "textbox",
          "inputType": "email"
        },
        "validation": {
          "required": true,
          "email": true
        },
        "hints": {
          "hintStart": "E.g. user@gmail.com"
        }
      }
    },
    {
      "key": "password",
      "type": "control",
      "template": {
        "label": "Password",
        "input": {
          "type": "textbox",
          "inputType": "password",
          "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
        },
        "validation": {
          "required": true,
          "pattern": true
        }
      },
      "expressions": {
        "hints.hintStart": "\"Min \" + (model || \"\").length + \"\/6\"",
        "hints.hintEnd": "\"Max \" + (model || \"\").length + \"\/20\""
      }
    },
    {
      "key": "search",
      "type": "control",
      "template": {
        "label": "Search",
        "input": {
          "type": "textbox",
          "inputType": "search"
        },
        "validation": {
          "required": true
        },
        "hints": {
          "hintStart": "E.g. angular dynamic-forms"
        }
      }
    }
  ]
}