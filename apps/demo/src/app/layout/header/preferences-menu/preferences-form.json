      "type": "group",
      "template": {
        "label": "Editor"
      },
      "children": [
        {
          "key": "previewMode",
          "type": "control",
          "template": {
            "label": "Preview Mode",
            "input": {
              "type": "radio",
              "options": [
                {
                  "label": "Tab View",
